# The one and only
export EDITOR='vim'

# tmux needs screen-256 color for ncurses to not get corrupted
export TERM=screen-256color

# extra PATH for the user-local install directories of some package managers
export PATH=$PATH:$HOME/.cabal/bin:$HOME/.rbenv/bin:$HOME/bin:$HOME/.cargo/bin

# For Homebrew
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# Stops Mercurial Paging Unecessarily
LESS=FRKX
